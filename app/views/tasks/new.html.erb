<%= form_with model: @task do |f|%>
  <p>Please provide the following information to add a new task to your calendar:</p>

  <%= f.label :name, "Task:" %>
  <%= f.text_field :name%>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :due %>
  <%= f.text_field :due %>

  <%= f.submit "Save Task", class: "book-button" %>
<% end %>

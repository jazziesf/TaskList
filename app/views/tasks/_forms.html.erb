
<%= form_with model: @task do |f|%>
  <p>Please provide the following information you would like to edit:</p>

  <%= f.label :name, "Task:" %>
  <%= f.text_field :name%>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :due %>
  <%= f.text_field :due %>

  <%= f.submit action_name %>
<% end %>
